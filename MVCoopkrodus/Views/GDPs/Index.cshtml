@model MVCoopkrodus.Models.CountryGDPViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="GDPs" asp-action="Index" method="get">
    <p>
        Region: <select asp-for="CountryRegion" asp-items="Model.Regions">
            <option value="">All</option>
        </select>

        Country: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].EstimatebyDollar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Population)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Countries) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstimatebyDollar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Population)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
